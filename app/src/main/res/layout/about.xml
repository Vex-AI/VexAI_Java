<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<FrameLayout
		android:id="@+id/frame"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:background="@drawable/vex_gd">
		<ImageView
			android:id="@+id/image_background"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			android:scaleType="centerCrop" />
		<LinearLayout
			android:id="@+id/base"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingLeft="17dp"
			android:paddingTop="12dp"
			android:paddingRight="17dp"
			android:paddingBottom="12dp"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/base_text"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="6dp"
				android:layout_marginRight="6dp"
				android:paddingTop="10dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical"
				android:background="@drawable/pesquisa">
				<androidx.cardview.widget.CardView
					android:id="@+id/card_img"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="6dp"
					app:cardElevation="5dp"
					app:cardCornerRadius="18dp">
					<ImageView
						android:id="@+id/vector"
						android:layout_width="55dp"
						android:layout_height="55dp"
						android:orientation="horizontal"
						android:src="@drawable/app_icon" />
				</androidx.cardview.widget.CardView>
				<TextView
					android:id="@+id/vexname"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="4dp"
					android:gravity="center_horizontal|center_vertical"
					android:text="Vex IA"
					android:textSize="14sp"
					android:textColor="#000000"
					android:fontFamily="@font/sourcesanspro_black" />
				<TextView
					android:id="@+id/about"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="8dp"
					android:layout_marginTop="6dp"
					android:layout_marginRight="8dp"
					android:layout_marginBottom="10dp"
					android:padding="5dp"
					android:gravity="center_horizontal|center_vertical"
					android:text="Vex é uma IA criada por cookie em 2019(um pouco antes de 14 de Abril) e atualmente sofre constantes atualizações. \n\nTanto de correções de bugs quanto features e até mesmo mudanças no sistema de IA.\n\nEste é um dos projetos que faço com amor e carinho e dedico horas para adicionar funções e recursos.  Essa é uma prova de que um dia eu já existi."
					android:textSize="16sp"
					android:textColor="#000000"
					android:fontFamily="@font/montserrat_regular" />
			</LinearLayout>
			<com.google.android.material.button.MaterialButton
				android:id="@+id/politica"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="16dp"
				android:layout_marginTop="7dp"
				android:layout_marginRight="16dp"
				android:layout_marginBottom="7dp"
				android:padding="3dp"
				android:gravity="center_horizontal|center_vertical"
				android:text="POLÍTICA DE PRIVACIDADE"
				android:textSize="16sp"
				android:textColor="#FFFFFF"
				android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
				app:backgroundTint="@color/laranja_escuro"
				style="@style/Widget.MaterialComponents.Button"
				android:fontFamily="@font/sourcesanspro_black"
				app:rippleColor="@color/branco"
				app:strokeWidth="1dp"
				app:strokeColor="@color/branco"
				app:iconTint="@color/branco"
				app:icon="@drawable/policy_icon" />
			<com.google.android.material.button.MaterialButton
				android:id="@+id/termos"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="17dp"
				android:layout_marginRight="17dp"
				android:layout_marginBottom="7dp"
				android:padding="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:text="TERMOS DE USO"
				android:textSize="16sp"
				android:textColor="#FFFFFF"
				android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
				app:backgroundTint="@color/verde"
				style="@style/Widget.MaterialComponents.Button"
				android:fontFamily="@font/sourcesanspro_black"
				app:rippleColor="@color/branco"
				app:strokeWidth="1dp"
				app:strokeColor="@color/branco"
				app:iconTint="@color/branco"
				app:icon="@drawable/quote_icon" />
		</LinearLayout>
	</FrameLayout>
</LinearLayout>
