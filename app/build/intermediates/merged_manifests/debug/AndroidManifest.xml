            android:name="com.cookie.vex.UpdateActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.cookie.vex.SettingsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.cookie.vex.ListDatabasesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.cookie.vex.NicknameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.cookie.vex.TutorialActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.FullScreen" />
        >
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.cookie.vexai.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
        </provider>
    </application>

